<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.modulos.libreria.dimepoblacioneslibreria.actividades.MainActivity"
        android:background="#d8386dff">

        <Button
            android:id="@+id/mainVerMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainSitios"
            android:onClick="verGoogleMapa"
            android:text="GoogleMaps" />

        <Button
            android:id="@+id/mainIniciarRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainVerMapa"
            android:onClick="iniciarRadio"
            android:text="Radio" />

        <Button
            android:id="@+id/mainBuzonCiudadno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainIniciarRadio"
            android:onClick="irBuzonCiudadano"
            android:text="Buzon ciudadano" />

        <Button
            android:id="@+id/mainSitios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="irSitios"
            android:text="Sitios" />

        <Button
            android:id="@+id/mainNotificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mainBuzonCiudadno"
            android:layout_alignStart="@+id/mainBuzonCiudadno"
            android:layout_below="@+id/mainBuzonCiudadno"
            android:onClick="irNotificaciones"
            android:text="Notificaciones" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listMenuLateral"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#007095"
        android:choiceMode="singleChoice"
        android:divider="#005875"
        android:dividerHeight="2dp" />

</android.support.v4.widget.DrawerLayout>

