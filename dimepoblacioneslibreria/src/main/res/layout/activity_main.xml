<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/imagen_fondo_con_titulo"
        tools:context="com.modulos.libreria.dimepoblacioneslibreria.actividades.MainActivity"
        >

        <ImageButton
            android:id="@+id/mainIniciarRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="iniciarRadio"
            android:src="@mipmap/home_radio_monesterio"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/lib_dime_lbl_radio"
            android:id="@+id/textIniciarRadio"
            android:textColor="@color/texto_principal"
            android:layout_below="@+id/mainIniciarRadio"
            android:layout_alignLeft="@+id/mainIniciarRadio"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp" />

        <ImageButton
            android:id="@+id/mainSitios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="irSitios"
            android:src="@mipmap/home_puntos_interes"
            android:background="@null"
            android:layout_marginLeft="40dp"
            android:layout_alignTop="@+id/mainIniciarRadio"
            android:layout_toRightOf="@+id/mainIniciarRadio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/lib_dime_lbl_puntos_interes"
            android:id="@+id/textPuntosInteres"
            android:textColor="@color/texto_principal"
            android:layout_alignTop="@+id/textIniciarRadio"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@+id/mainSitios" />

        <ImageButton
            android:id="@+id/mainBuzonCiudadno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="irBuzonCiudadano"
            android:src="@mipmap/home_colaboracion_ciudadana"
            android:background="@null"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textIniciarRadio"
            android:layout_alignLeft="@+id/mainIniciarRadio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/lib_dime_lbl_colaboracion_ciudadana"
            android:id="@+id/textBuzonCiudadano"
            android:layout_below="@+id/mainBuzonCiudadno"
            android:layout_toLeftOf="@+id/mainSitios"
            android:layout_toStartOf="@+id/mainSitios"
            android:textColor="@color/texto_principal"
            android:gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/mainNotificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="irNotificaciones"
            android:background="@null"
            android:src="@mipmap/home_bandos_moviles"
            android:layout_toRightOf="@+id/mainBuzonCiudadno"
            android:layout_alignLeft="@+id/mainSitios"
            android:layout_alignTop="@+id/mainBuzonCiudadno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/lib_dime_lbl_bandos"
            android:id="@+id/textBandos"
            android:textColor="@color/texto_principal"
            android:layout_alignTop="@+id/textBuzonCiudadano"
            android:layout_alignLeft="@+id/mainNotificaciones"
            android:gravity="center_horizontal"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayoutMenuLateral"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="@color/opcion_menu_lateral"
            android:src="@drawable/escudo_monesterio"/>

        <ListView
            android:id="@+id/listMenuLateral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/opcion_menu_lateral"
            android:choiceMode="singleChoice"
            android:divider="@color/separador_menu_lateral"
            android:dividerHeight="2dp" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>

